{
	"name": "nutab",
	"version": "0.0.1",
	"description": "A better new-tab browser extension",
	"keywords": [
		"svelte",
		"sveltekit",
		"newtab",
		"extension",
		"chrome",
		"browser"
	],
	"type": "module",
	"scripts": {
		"dev": "run-p dev:*",
		"dev:cors": "npx tsm ./cors-anywhere.ts",
		"dev:kit": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"status": "vercel logs https://nutab.fractal-hq.com",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:e2e": "playwright test",
		"test:unit": "vitest -- --run",
		"test:unit:watch": "vitest -- --watch",
		"test": "run-p test:e2e test:unit",
		"test:watch": "run-p test:unit:watch"
	},
	"dependencies": {
		"@fontsource/fira-mono": "^5.0.13"
	},
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	},
	"devDependencies": {
		"@hapi/hoek": "^11.0.4",
		"@sveltejs/adapter-static": "3.0.2",
		"@sveltejs/adapter-vercel": "5.4.1",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node": "^22.1.0",
		"@types/sjcl": "^1.0.34",
		"autoprefixer": "^10.4.20",
		"cheerio": "1.0.0-rc.12",
		"cors-anywhere": "^0.4.4",
		"cssnano": "^7.0.4",
		"cuid": "^3.0.0",
		"date-fns": "^3.6.0",
		"dexie": "^4.0.8",
		"dexie-export-import": "^4.1.2",
		"fractils": "^3.1.3",
		"froebel": "^0.23.2",
		"greset": "^2.0.0",
		"highlight.js": "^11.10.0",
		"nanoid": "^5.0.7",
		"node-html-parser": "6.1.13",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.41",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prismjs": "^1.29.0",
		"pug": "^3.0.3",
		"rimraf": "^6.0.1",
		"sass": "^1.77.8",
		"sjcl": "^1.0.8",
		"svelte": "^5.0.0",
		"svelte-preprocess": "^6.0.0",
		"tiny-glob": "^0.2.9",
		"tippy.js": "^6.3.7",
		"tslib": "^2.6.3",
		"typescript": "^5.5.4",
		"vite": "^5.4.4"
	}
}
