{
	"name": "nutab",
	"version": "0.0.1",
	"description": "A better new-tab browser extension",
	"keywords": [
		"svelte",
		"sveltekit",
		"newtab",
		"extension",
		"chrome",
		"browser"
	],
	"type": "module",
	"scripts": {
		"dev": "run-p dev:*",
		"dev:cors": "npx tsm ./cors-anywhere.ts",
		"dev:kit": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"status": "vercel logs https://nutab.fractal-hq.com",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:e2e": "playwright test",
		"test:unit": "vitest -- --run",
		"test:unit:watch": "vitest -- --watch",
		"test": "run-p test:e2e test:unit",
		"test:watch": "run-p test:unit:watch"
	},
	"dependencies": {
		"@fontsource/fira-mono": "^5.1.0"
	},
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	},
	"devDependencies": {
		"@hapi/hoek": "^11.0.4",
		"@playwright/test": "^1.48.1",
		"@sveltejs/adapter-auto": "^3.2.5",
		"@sveltejs/adapter-static": "3.0.5",
		"@sveltejs/adapter-vercel": "5.4.5",
		"@sveltejs/kit": "^2.7.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/typography": "^0.5.15",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.7.7",
		"@types/sjcl": "^1.0.34",
		"autoprefixer": "^10.4.20",
		"cheerio": "1.0.0",
		"cors-anywhere": "^0.4.4",
		"cssnano": "^7.0.6",
		"nanoid": "^5.0.7",
		"date-fns": "^4.1.0",
		"dexie": "^4.0.9",
		"dexie-export-import": "^4.1.2",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"fractils": "^3.1.3",
		"froebel": "^0.23.2",
		"globals": "^15.11.0",
		"greset": "^2.0.0",
		"highlight.js": "^11.10.0",
		"nanoid": "^5.0.7",
		"node-html-parser": "6.1.13",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.47",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prismjs": "^1.29.0",
		"pug": "^3.0.3",
		"rimraf": "^6.0.1",
		"sass": "^1.80.3",
		"sjcl": "^1.0.8",
		"svelte": "^5.0.5",
		"svelte-check": "^4.0.5",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^3.4.14",
		"tiny-glob": "^0.2.9",
		"tippy.js": "^6.3.7",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.11.0",
		"vite": "^5.4.9",
		"vitest": "^2.1.3"
	}
}
